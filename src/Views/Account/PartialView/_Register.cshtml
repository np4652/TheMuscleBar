@using TheMuscleBar.AppCode.Enums;
@using TheMuscleBar.AppCode.Extensions;
@model TheMuscleBar.Models.RegisterViewModel

<form id="RegisterForm" action="@Html.Raw(Model.Id==0?"/Account/Register":"/User/Update")" method="post">
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <input type="hidden" value="@Model.Id" name="@nameof(Model.Id)" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" required="" id="txtName" autocomplete="off" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" id="txtMobile" maxlength="10" autocomplete="off" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input @Html.Raw(Model.Id == 0 ? "" : "disabled") type="search" value="@Model.Email" id="txtEmailID" required="" name="Email" autocomplete="new-password" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select required="" name="@nameof(Model.Gender)">
                    <option value="M">Male</option>
                    <option value="F">Female</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>
        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
            <div class="form-group">
                <label asp-for="DOB" class="control-label"></label>
                <input type="text" value="@Model.DOB" id="txtDOB" required="" name="@nameof(Model.DOB)" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
        </div>
        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
            <div class="form-group">
                <label asp-for="AdharNo" class="control-label"></label>
                <input type="text" value="@Model.AdharNo" id="txtAdharNo" required="" name="@nameof(Model.AdharNo)" />
                <span asp-validation-for="AdharNo" class="text-danger"></span>
            </div>
        </div>
        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
            <div class="form-group">
                <label asp-for="Occupation" class="control-label"></label>
                <input type="text" value="@Model.Occupation" id="txtOccupation" required="" name="@nameof(Model.Occupation)" />
                <span asp-validation-for="Occupation" class="text-danger"></span>
            </div>
        </div>
        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
            <div class="form-group">
                <label asp-for="ReferBy" class="control-label"></label>
                <input type="text" value="@Model.ReferBy" id="txtReferBy" required="" name="@nameof(Model.ReferBy)" />
                <span asp-validation-for="ReferBy" class="text-danger"></span>
            </div>
        </div>
        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
            <div class="form-group">
                <label asp-for="MaritalStatus" class="control-label"></label>
                <select required="" name="@nameof(Model.MaritalStatus)">
                    <option value="S">Single</option>
                    <option value="M">Married</option>
                </select>
                <span asp-validation-for="MaritalStatus" class="text-danger"></span>
            </div>
        </div>
        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
            <div class="form-group">
                <label asp-for="MembershipType" class="control-label"></label>
                <select required="" name="@nameof(Model.MembershipType)">
                    <option value="@MembershipType.Monthly">@MembershipType.Monthly</option>
                    <option value="@MembershipType.Quarterly">@MembershipType.Quarterly</option>
                    <option value="@MembershipType.HalfYearly">@MembershipType.HalfYearly</option>
                    <option value="@MembershipType.Yearly">@MembershipType.Yearly</option>
                </select>
                <span asp-validation-for="MembershipType" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <input type="file" name="@nameof(Model.ProfilePic)" />
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <textarea name="@nameof(Model.Address)" required="" class="form-control"></textarea>
            </div>
                
                <div class="form-group">
                    <button type="submit" id="btnSubmit" class="btn btn-block theme-bg-2 mb-4">@Html.Raw(Model.Id == 0 ? "Create" : "Update") </button>
                </div>
            </div>

        </div>
</form>
<script>
    $('#txtDOB').datepicker({
        dateFormat: 'dd M yy'
    });
</script>
