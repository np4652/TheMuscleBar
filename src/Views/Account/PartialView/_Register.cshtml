@using TheMuscleBar.AppCode.Enums;
@using TheMuscleBar.AppCode.Extensions;
@model TheMuscleBar.Models.RegisterViewModel

<form id="RegisterForm" action="@Html.Raw(Model.Id==0?"/Account/Register":"/User/Update")" method="post">
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <input type="hidden" value="@Model.Id" name="@nameof(Model.Id)" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" required="" id="txtName" autocomplete="off" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" id="txtMobile" maxlength="10" autocomplete="off" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input @Html.Raw(Model.Id == 0 ? "" : "disabled") type="search" value="@Model.Email" id="txtEmailID" required="" name="Email" autocomplete="new-password" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        @if (Model.Id == 0)
        {
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" id="txtPassword" autocomplete="new-password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <input asp-for="ConfirmPassword" id="txtConfirmPassword" autocomplete="off" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
        }

    <div class="col-sm-12 text-right">
        <div class="form-group">
            <input type="file" name="@nameof(Model.ProfilePic)"/>
        </div>
            <div class="form-group">
                <button type="submit" id="btnSubmit" class="btn btn-block btn-primary mb-4">@Html.Raw(Model.Id == 0 ? "Create" : "Update") </button>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    <script>
        function getUserss() {
            Q.preloader.load();
            $.ajax({
                type: 'post',
                url: '/User/UsersList',
                success: function (data) {
                    $('tbody').html(data);
                },
                error: function (data) {
                    console.log('An error occurred.');
                    console.log(data);
                    Q.notify(-1, 'An error occurred.');
                },
            });
            Q.preloader.remove();
        }
    </script>
}
