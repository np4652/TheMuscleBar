<div id="MerchantDetail" class="mb-2"></div>
@section scripts{
    <script>

        $(document).ready(function () {
            loadData();
        });
        const sendLoginOTP = () => {
            let mobile = $('#txtMobile').val();
            $.post('/Merchant/SendLoginOTP', { mobile }).done(result => {
                if (result.statusCode == 1) {
                    $('#txtMobile')
                        .parent('.form-group')
                        .after(`<div class="form-group"><input type="text" placeholder="Please enter OTP" class="form-control" style="margin-bottom: 0.5rem;" id="txtOTP"/>
                                                      <span style="float: right;color: cornflowerblue;padding-bottom: 2px;" id="resendOtp">Resend OTP</span>
                                                        </div>`);
                    $('#btnConfigure').attr('onclick', `verifyLoginOTP('${mobile}','${result.responseText}','${result.result.uuid}','${result.result.devicefingerprint}')`);

                }
                else {
                    Q.notify(result.statusCode, result.responseText);
                }
            }).fail(xhr => {
                console.log(xhr.responseText);
                Q.notify(-1, 'Something went wrong...')
            })
        };

        const verifyLoginOTP = (mobile, otptoken, uuid, devicefingerprint) => {
            $.post('/Merchant/VerifyLoginOTP', { uuid, devicefingerprint, mobile, otptoken, otp: $('#txtOTP').val() }).done(result => {
                Q.notify(result.statusCode, result.responseText);
                if (result.statusCode == 1) {
                    $('.ui-dialog-titlebar-close').click();
                    loadData();
                }
            }).fail(xhr => {
                console.log(xhr.responseText);
                Q.notify(-1, 'Something went wrong...')
            })
        };

        var _configurationWin = (_m='') => {
            let _html = `<div class="form-group"><input type="text" class="form-control" value="${_m}" placeholder="Please enter mobile number" id="txtMobile"/></div>
                         <div class="form-group"><button class="btn btn-primary btn-block" id="btnConfigure" onclick="sendLoginOTP()">Configure</button></div>`;
            Q.alert({
                title: 'Connect',
                body: _html
            });
        }
        //$('#btnNew').click(e => _configurationWin());

        $(document).on('click', '#resendOtp', function () {
            let mobile = $('#txtMobile').val();
            $.post('/Merchant/SendLoginOTP', { mobile }).done(result => {
                if (result.statusCode == 1) {
                    Q.notify(1, 'Resend OTP Sucessfully .')
                }
            }).fail(xhr => Q.notify(-1, 'An error occurred.')).always(() => Q.preloader.remove());
        });

        function loadData() {
            Q.preloader.load();
            $.post('/Merchant/_MerchantDetail')
            .done(result => $('#MerchantDetail').html(result))
            .fail(xhr => Q.notify(-1, 'An error occurred.'))
            .always(() => Q.preloader.remove());
        }
    </script>
    }
